    @*<div class="container body-content">*@
    <main>
        @RenderBody()
        @*</div>*@
    </main>
    <footer class="page-footer">     
        <p style="margin:0;"><h4 style="margin:0;"><strong>Copyright @@ James Griffith @DateTime.Now.Year</strong></h4></p>
       
        
        <!-- Copyright -->

    </footer>
    <div class="clearfix"></div>
